#!/usr/bin/env node
/* eslint-disable @typescript-eslint/no-var-requires, @typescript-eslint/no-require-imports */

const { spawnSync } = require('child_process')
const fs = require('fs')
const packageName = fs.readFileSync(0, 'utf-8')

// We need to run a different command when working on dx-scanner
if (packageName == "dx-scanner") {
	spawnSync('bin/run', ['--init'])
} else {
	spawnSync('dx-scanner', ['--init'])
}